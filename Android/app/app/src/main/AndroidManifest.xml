<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.room">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/booked_rooms"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Room"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.AdminRoomActivity"></activity>
        <activity android:name=".activity.AdminInstrumentActivity" />
        <activity android:name=".activity.EquipmentInstrumentActivity" />
        <activity android:name=".activity.UserActivity" />
        <activity
            android:name=".activity.AuthenticationActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AdminActivity" />
        <activity
            android:name=".activity.ReservationActivity"
            android:parentActivityName=".activity.UserActivity" />
        <activity
            android:name=".activity.CustomerActivity"
            android:label="@string/customers"
            android:parentActivityName=".activity.AdminActivity" />
        <activity
            android:name=".activity.RoomActivity"
            android:label="@string/rooms"
            android:parentActivityName=".activity.AdminActivity" />
        <activity
            android:name=".activity.InstrumentActivity"
            android:label="@string/instruments"
            android:parentActivityName=".activity.AdminActivity" />
    </application>

</manifest>